# MCP Server Configuration

# Server settings
MCP_PORT=3000
MCP_HOST=0.0.0.0

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Rate limiting
RATE_LIMIT_CONCURRENT=5
RATE_LIMIT_MIN_TIME=100

# Timeouts (milliseconds)
TIMEOUT_DEFAULT=30000
TIMEOUT_LONG=120000

# Composio Integration (YouTube, Gmail, etc.)
# Sign up at https://composio.dev and connect your YouTube/Gmail accounts
COMPOSIO_API_KEY=your_composio_api_key
COMPOSIO_MCP_ENDPOINT=https://backend.composio.dev/api/v1/mcp
COMPOSIO_USER_ID=your_user_id

# YouTube Configuration
YOUTUBE_DEFAULT_VIDEOS_PER_CHANNEL=5
YOUTUBE_DEFAULT_MAX_CHANNELS=50

# Gmail Configuration
GMAIL_ENABLED=true
RECIPIENT_EMAIL=your_email@example.com  # Optional: for automatic email notifications
